<%= render 'layouts/navbar_main' %>


<h1 class="text-center text-white font-nf mt-4"><%= "What are we watching today, " + @profile.name + "?" %></h1>
<h2 class="text-center text-white font-nf mt-4">Your List</h2>
<div class="container-md">
  <div class="row">
    <% @profile.list.movies.each do |movie| %>
        <% @parse = movie %>
        <div class="mx-3 my-3"> <%= render template: "layouts/movie_card" %> </div>
        
    <% end %>
  </div>
</div>
<br>
<% Tag.all.each do |tag| %>
  <h2 class="text-center text-white font-nf mt-4"><%=tag.name %></h2>
    <div class="container-md">
        <div class="row">
            <% tag.movies.each do |movie| %>
                <% @parse = movie %>
                <div class="mx-3 my-3"> <%= render template: "layouts/movie_card" %> </div>
            
        <% end %>
        </div>
    </div>
    <br>
    <% end %>

