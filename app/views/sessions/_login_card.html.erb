<div class="container login-card">
<div class="row">
  <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
    <div class="card card-signin my-5 ">
      <div class="card-body">
        <h5 class="card-title text-center text-white">Please Sign In</h5>
         
        <div class="form-signin">
        <%= form_with(scope: :session, url: login_path, class: "form-signin", local: true) do |f| %>         
          <div class="form-group">
          <%= f.label :email, class: "hidden" %>
          <%= f.email_field :email, class: "form-control form-field-1", placeholder: "Email" %>
          </div>
          <div class="form-group">
          <%= f.label :password, class: "hidden" %>
          <%= f.password_field :password, class: "form-control form-field-1", placeholder: "Password" %>
          </div>         
          <div class="login-button mt-4">
          <%= f.submit "Sign in", class: "btn btn-med btn-danger btn-block text-uppercase" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>


