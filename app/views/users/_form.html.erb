<%= render 'shared/errors', obj: @user %>


<div class="container login-card">
<div class="row">
  <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
    <div class="card card-signup my-5 ">
      <div class="card-body">
        <h5 class="card-title text-center text-white">New Account</h5>
         
        <div class="form-signup">
        <%= form_for(@user) do |f| %>   

          <div class="form-group">
          <%= f.label :username, class: "hidden" %>
          <%= f.text_field :username, class: "form-control form-field-1", placeholder: "Enter Username" %>
          </div>
          
          <div class="form-group">
          <%= f.label :email, class: "hidden" %>
          <%= f.email_field :email, class: "form-control form-field-1", placeholder: "Enter Email" %>
          </div>

          <div class="form-group">
          <%= f.label :password, class: "hidden" %>
          <%= f.password_field :password, class: "form-control form-field-1", placeholder: "Choose Password" %>
          </div>        
          
          <div class="login-button mt-4">
          <%= f.submit "Sign up", class: "btn btn-danger btn-block text-uppercase" %>
          </div>

          <% end %>

        </div>
        
      </div>
    </div>
  </div>
</div>
</div>






